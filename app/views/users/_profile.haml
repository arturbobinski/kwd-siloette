%h3= @profile.perform_name
.row
  .col-sm-6
    %h5.text-center.text-left-sm.no-top= t('.performer_profile')
  .col-sm-6
    .text-center.text-right-sm{'data-score' => @user.rating}
%hr
%ul.list-unstyled
  %li
    %b #{t('.experience_level')}:
    %span= @profile.experience_level
  %li
    %b #{t('.education_level')}:
    %span= @profile.education_level
  %li
    %b #{t('.languages_spoken')}:
    %span= @profile.languages.pluck(:name).join(', ')
  %li
    %b #{t('.height')}:
    - if @profile.height
      %span= humanized_height(@profile.height)
  %li
    %b #{t('.body_type')}:
    %span= @profile.body_type
  / %li
  /   %b #{t('.bust')}:
  /   %span= @profile.bust.humanize
  %li
    %b #{t('.ethnicity')}:
    %span= @profile.ethnicity.try(:humanize)
