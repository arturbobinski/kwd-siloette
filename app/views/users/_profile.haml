%h3= @profile.perform_name
%h5= t('.performer_profile')
%hr
%ul.list-unstyled
  %li
    %b #{t('.experience_level')}:
    %span= @profile.experience_level
  - if @profile.education_level
    %li
      %b #{t('.education_level')}:
      %span= @profile.education_level
  %li
    %b #{t('.languages_spoken')}:
    %span= @profile.languages.pluck(:name).join(', ')
  %li
    %b #{t('.height')}:
    %span= humanized_height(@profile.height)
  %li
    %b #{t('.body_type')}:
    %span= @profile.body_type
  / %li
  /   %b #{t('.bust')}:
  /   %span= @profile.bust.humanize
  %li
    %b #{t('.ethnicity')}:
    %span= @profile.ethnicity.humanize
