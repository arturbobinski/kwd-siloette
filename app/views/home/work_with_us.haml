.container
  .row
    .col-sm-7
      %h2= t('.title')
      %p= t('.work_on_your_own_terms')

      .row
        .col-sm-4
          %h3.text-uppercase.text-light= t('common.modeling')
        .col-sm-4
          %h3.text-uppercase.text-light= t('common.dancing')
        .col-sm-4
          %h3.text-uppercase.text-light= t('common.hosting')

      %p= t('.looking_pro')
      %p= t('.advantage')

      %hr.solid

      %h4.text-uppercase.text-light= t('.direct_payment')
      %h4.text-uppercase.text-light= t('.anonymoust_communication')
      %h4.text-uppercase.text-light= t('.customer_verification')

      %hr.solid

      %p= t('.guarantee')

    .col-sm-5
      %br
      - if current_user
        - unless current_user.dancer?
          = link_to t('links.become_performer'), become_dancer_user_path(current_user), class: 'btn btn-block btn-primary text-uppercase'
      - else
        %h5.text-center= t('.sign_in_with_social_accounts')
        = link_to fa_icon('instagram', text: t('common.instagram')), omniauth_authorize_path(:user, :instagram, state: :dancer), class: 'btn btn-block btn-instagram text-uppercase'
        = link_to fa_icon('facebook', text: t('common.facebook')), omniauth_authorize_path(:user, :facebook, state: :dancer), class: 'btn btn-block btn-facebook text-uppercase'
        = link_to fa_icon('google', text: t('common.google')), omniauth_authorize_path(:user, :google_oauth2, state: :dancer), class: 'btn btn-block btn-google text-uppercase'
        = link_to fa_icon('twitter', text: t('common.twitter')), omniauth_authorize_path(:user, :twitter, state: :dancer), class: 'btn btn-block btn-twitter text-uppercase'

      %br
      = image_tag 'become_performer.jpg', alt: 'Become performer', class: 'img-responsive'