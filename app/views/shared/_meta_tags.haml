- @title ||= 'Siloette'
- @description ||= 'Exotic Dancers. Models. Hosts.'
- @url ||= root_url
- @location ||= nil
- @image ||= nil
- @images ||= []

%meta{charset: 'utf-8' }
%meta{content: 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type'}
%meta{content: 'IE=edge', 'http-equiv' => 'X-UA-Compatible'}
%meta{name: 'viewport', content: 'width=device-width, initial-scale=1'}
%meta{name: 'robots', content: 'noodp, nodir, noydir'}
%meta{name: 'googlebot', content: 'noodp'}
%meta{name: 'keywords', content: 'service booking dancer stripper party exotic'}
%meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0, user-scalable=no'}
%meta{name: 'distribution', content: 'global'}
%meta{name: 'coverage', content: 'worldwide'}
%meta{name: 'copyright', content: "Â© Siloette #{Date.today.year}"}
%meta{name: 'generator', content: 'Developed by Siloette'}
%meta{property: 'og:site_name', content: 'Sioette'}
%meta{property: 'og:type', content: 'website'}
%meta{property: 'og:local', content: 'en_US'}

%meta{name: 'title', content: @title}
%meta{name: 'description', content: @description}
%link{rel: 'canonical', href: @url}
%meta{property: 'og:title', content: @title}
%meta{property: 'og:description', content: @description}
%meta{property: 'og:url', content: @url}
%meta{name: 'twitter:card', content: 'summary'}
%meta{name: 'twitter:site', content: '@silloete'}
%meta{name: 'twitter:title', content: @title}
%meta{name: 'twitter:description', content: @description}

- if @location
  %meta{property: 'og:latitude', content: @location[:lat]}
  %meta{property: 'og:longitude', content: @location[:lng]}
  %meta{property: 'og:street-address', content: @location[:address]}
  %meta{property: 'og:locality', content: @location[:country]}
  %meta{property: 'og:region', content: @location[:country]}
  %meta{property: 'og:postal-code', content: @location[:postal_code]}

- if @images.length > 0
  - @images.each do |image|
    %meta{property: 'og:image', content: image[:url]}
    %meta{property: 'og:image:width', content: image[:width]}
    %meta{property: 'og:image:height', content: image[:height]}
    %meta{name: 'twitter:card', content: 'photo'}
    %meta{name: 'twitter:image', content: image[:url]}
    %meta{name: 'twitter:image:width', content: image[:width]}
    %meta{name: 'twitter:image:height', content: image[:height]}
- elsif @image
  %meta{property: 'og:image', content: @image[:url]}
  %meta{property: 'og:image:width', content: @image[:width]}
  %meta{property: 'og:image:height', content: @image[:height]}
  %meta{name: 'twitter:card', content: 'photo'}
  %meta{name: 'twitter:image', content: @image[:url]}
  %meta{name: 'twitter:image:width', content: @image[:width]}
  %meta{name: 'twitter:image:height', content: @image[:height]}

- if content_for :meta_tags
  = yield :meta_tags