%nav#main-nav.navbar.navbar-default.navbar-static-top
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{'data-target' => '#bs-example-navbar-collapse-1', 'data-toggle' => 'collapse', type: 'button'}
        %span.sr-only Toggle navigation
        = t 'common.menu'
        = fa_icon 'bars'
      = link_to root_path, class: 'navbar-brand' do
        %i.header-logo
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        - if current_user.nil? || !current_user.dancer?
          %li= link_to t('links.work_with_us'), new_user_registration_path(bd: true)
        - if current_user&.dancer?
          %li= link_to t('links.create_service'), 'javascript: void(0);'
        - if current_user
          %li.dropdown
            %a(data-toggle='dropdown' aria-haspopup='true' aria-expanded='true' href='#')
              = image_tag (current_user.avatar.file ? current_user.avatar.url(:mini) : 'missing.png'), size: '32x32', alt: '', class: 'round'
              = current_user.first_name
              %span.caret
            %ul.dropdown-menu
              %li= link_to fa_icon('sign-out', text: t('common.sign_out')), destroy_user_session_path
        - else current_user
          %li= link_to t('common.sign_in'), new_user_session_path
