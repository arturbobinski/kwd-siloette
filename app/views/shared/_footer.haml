%footer.footer
  .container
    .row
      .col-sm-2.text-center
        = link_to root_path do
          = image_tag 'logo-small.png', alt: 'Siloette', height: 32, class: 'logo'
      .col-sm-8.text-center
        %ul.list-unstyled
          %li= link_to t('common.legal'), page_path('terms-of-use')
          %li= link_to t('common.faqs'), page_path(current_user&.dancer? ? 'faqs-for-performer' : 'faqs-for-customers')
          - @pages.each do |page|
            %li= link_to page.title, page_path(page.slug)
          %li= link_to t('common.blog'), posts_path
      .col-sm-2.text-center
        %ul.list-unstyled.social
          %li
            = link_to 'javascript: void(0);' do
              = fa_icon 'twitter'
          %li
            = link_to 'javascript: void(0);' do
              = fa_icon 'google-plus'
          %li
            = link_to 'javascript: void(0);' do
              = fa_icon 'facebook'