.row
  .col-sm-4.col-sm-offset-4
    .panel.panel-default
      .panel-heading
        = t('.forgot_password')
      .panel-body
        = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'form-horizontal', 'data-parsley-validate' => true }) do |f|
          = f.input :email, autofocus: true, required: true, input_html: { 'data-parsley-type' => :email }
          .actions
            = f.submit t('.submit'), class: 'btn btn-primary btn-block'
