- if mobile?
  %li.booking
    %dl.dl-horizontal
      %dt= t('activerecord.attributes.booking.service')
      %dd= link_to booking.service.title, service_path(booking.service)
    %dl.dl-horizontal
      %dt= t('activerecord.attributes.booking.number_of_guests')
      %dd= booking.number_of_guests
    %dl.dl-horizontal
      %dt= t('activerecord.attributes.booking.address')
      %dd= booking.try(:full_address)
    %dl.dl-horizontal
      %dt= t('activerecord.attributes.booking.start_at')
      %dd= datetime_format local_time(booking.start_at)
    %dl.dl-horizontal
      %dt= t('activerecord.attributes.booking.hours')
      %dd= booking.hours
    %dl.dl-horizontal
      %dt= t('common.state')
      %dd= t("activerecord.attributes.booking.states.#{booking.state}")
    %dl.dl-horizontal
      %dt= t('common.payment_state')
      %dd
        - if booking.payment_state
          = t("activerecord.attributes.payment.states.#{booking.payment_state}")
    .actions
      - if booking.viewable?
        %li= link_to fa_icon('eye', text: t('common.show')), performer_booking_path(booking), class: 'btn btn-block btn-primary'
      - if booking.may_accept?
        %li= link_to fa_icon('check', text: t('common.accept')), accept_performer_booking_path(booking), class: 'btn btn-block btn-success'
      - if booking.may_decline?
        %li= link_to fa_icon('close', text: t('common.decline')), decline_performer_booking_path(booking), class: 'btn btn-block btn-warning'
    %hr

- else
  %tr
    %td= link_to booking.service.title, service_path(booking.service)
    %td= booking.number_of_guests
    %td= booking.try(:full_address)
    %td= datetime_format local_time(booking.start_at)
    %td= booking.hours
    %td
      %span.label.label-info= t("activerecord.attributes.booking.states.#{booking.state}")
    %td
      - if booking.payment_state
        %span.label.label-success= t("activerecord.attributes.payment.states.#{booking.payment_state}")
    %td
      .btn-group.text-left
        %button.btn.btn-default.btn-sm.dropdown-toggle{type: 'button', 'data-toggle' => 'dropdown'}
          = fa_icon 'cog'
          %span.caret
        %ul.dropdown-menu.pull-right{role: 'menu'}
          - if booking.viewable?
            %li= link_to fa_icon('eye', text: t('common.show')), performer_booking_path(booking)
          - if booking.may_accept?
            %li= link_to fa_icon('check', text: t('common.accept')), accept_performer_booking_path(booking)
          - if booking.may_decline?
            %li= link_to fa_icon('close', text: t('common.decline')), decline_performer_booking_path(booking)
