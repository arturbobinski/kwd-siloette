- title = 'Blog'
- description = 'Blog for dancers and customers'
- url = posts_url

- content_for :title do
  = title

- content_for :meta_tags do
  %meta{name: 'title', content: title}
  %meta{name: 'description', content: description}
  %link{rel: 'canonical', href: url}
  %meta{property: 'og:title', content: title}
  %meta{property: 'og:description', content: description}
  %meta{property: 'og:url', content: url}
  %meta{name: 'twitter:card', content: 'summary'}
  %meta{name: 'twitter:site', content: '@silloete'}
  %meta{name: 'twitter:title', content: title}
  %meta{name: 'twitter:description', content: description}
  %meta{name: 'robots', content: 'index, follow'}
  %meta{name: 'googlebot', content: 'index, follow'}

.container
  - if @posts.count > 0
    %ul.list-unstyled
      - @posts.each do |post|
        %li.post
          .post-title
            = link_to post.title, post_path(post), class: 'title'
            %span.time-ago
              = fa_icon 'clock-o', text: "#{time_ago_in_words(post.created_at)} ago"
            %span.post-author
              %em by
              #{post.author.name}
          .post-content
            = first_words(post.content)
  - else
    = t('.no_posts')